# JET ICU Operations - Azure Production Environment Configuration
# Copy this file and update with your actual Azure values

# Django Settings
DJANGO_SETTINGS_MODULE=backend.settings.production
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1,frontend,backend

# Azure PostgreSQL Database Configuration
DB_HOST=your-server.postgres.database.azure.com
DB_PORT=5432
DB_NAME=jeticu_prod
DB_USER=your-db-user@your-server
DB_PASSWORD=your-secure-database-password
DB_SSL_MODE=require

# Domain Configuration
DOMAIN_NAME=yourdomain.com

# Django Superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure-admin-password

# Application Setup Flags
LOAD_INITIAL_DATA=true
RUN_SETUP_COMMANDS=true

# Security Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# HIPAA Encryption Configuration
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key-here

# Email Configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=JET ICU Operations <noreply@yourdomain.com>

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static
DOCUMENTS_ROOT=/app/documents

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE_PATH=/app/logs/jeticu.log

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# API Rate Limiting
API_RATE_LIMIT=1000/hour

# Azure Specific Settings
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_LOCATION=eastus

# Cache Configuration (Optional - can use Azure Redis if needed)
# CACHE_BACKEND=django_redis.cache.RedisCache
# CACHE_LOCATION=your-azure-redis.redis.cache.windows.net:6380
# CACHE_OPTIONS={"ssl_cert_reqs": None}

# Session Configuration
SESSION_ENGINE=django.contrib.sessions.backends.db
SESSION_COOKIE_AGE=86400  # 24 hours

# Production Optimizations
DJANGO_CONN_MAX_AGE=300

# Azure Storage (Optional - for media files)
# USE_AZURE_STORAGE=False
# AZURE_ACCOUNT_NAME=yourstorageaccount
# AZURE_ACCOUNT_KEY=your-storage-key
# AZURE_CONTAINER=media

# Optional: Application Insights
# APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Optional: Sentry for Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Container Configuration
CONTAINER_BACKEND_PORT=8000
CONTAINER_FRONTEND_PORT=3000
HOST_NGINX_PORT=80
HOST_NGINX_SSL_PORT=443

# Timezone
TIME_ZONE=America/New_York