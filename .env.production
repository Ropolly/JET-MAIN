# JET ICU Operations - Production Environment Configuration
# Copy this file and update with your actual production values

# Django Settings
DJANGO_SETTINGS_MODULE=backend.settings.production
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Database Configuration (Azure PostgreSQL)
# Use Azure Database for PostgreSQL in production
AZURE_DB_HOST=your-server.postgres.database.azure.com
AZURE_DB_PORT=5432
AZURE_DB_NAME=jeticu_prod
AZURE_DB_USER=your-db-user@your-server
AZURE_DB_PASSWORD=your-db-password

# Alternative: Regular PostgreSQL
# DB_HOST=postgres.yourserver.com
# DB_PORT=5432
# DB_NAME=jeticu_prod
# DB_USER=jeticu_user
# DB_PASSWORD=your-db-password

# Domain Configuration
DOMAIN_NAME=yourdomain.com

# Django Superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure-admin-password

# Application Setup Flags
LOAD_INITIAL_DATA=true
RUN_SETUP_COMMANDS=true

# Security Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HIPAA Encryption Configuration
# Generate a strong 32-byte key for AES-GCM encryption
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key-here

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=JET ICU Operations <noreply@yourdomain.com>

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=True

# Redis Configuration (optional - for caching)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# Azure Storage Configuration (optional - for static/media files)
# AZURE_ACCOUNT_NAME=yourstorageaccount
# AZURE_ACCOUNT_KEY=your-storage-key
# AZURE_CONTAINER=media

# Sentry Configuration (optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# API Rate Limiting
API_RATE_LIMIT=1000/hour