# =============================================================================
# Email Configuration
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@jeticu.com

# =============================================================================
# Frontend Configuration
# =============================================================================

# Vue/Vite Configuration
VITE_APP_API_URL=http://localhost:8001/api
VITE_APP_NAME=JET ICU Operations
VITE_APP_VERSION=1.0.0

# =============================================================================
# Django Admin Configuration
# =============================================================================

# Auto-create superuser in development
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@jeticu.local
DJANGO_SUPERUSER_PASSWORD=admin123

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=jeticu

# Dockerfile selection
BACKEND_DOCKERFILE=Dockerfile.dev  # or 'Dockerfile' for production
FRONTEND_DOCKERFILE=Dockerfile.dev  # or 'Dockerfile' for production

# Environment file to use
ENV_FILE=.env.docker  # or '.env.production'

# =============================================================================
# Deployment Configuration
# =============================================================================

# Server Configuration
NGINX_HOST=jeticu.com
NGINX_PORT=80

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Static/Media Files
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# =============================================================================
# Development Flags
# =============================================================================

# Load sample data on startup
LOAD_SAMPLE_DATA=false
LOAD_INITIAL_DATA=false
RUN_SETUP_COMMANDS=true

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=

# Log Level
LOG_LEVEL=INFO

# =============================================================================
# CORS Configuration
# =============================================================================

CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://jeticu.com