# JET ICU Operations Platform - Environment Variables Template
# Copy this file to .env.local, .env.docker, or .env.production and fill in values

# =============================================================================
# Django Configuration
# =============================================================================

# Secret key for Django (generate a new one for production)
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode (never true in production)
DEBUG=True

# Django settings module to use
DJANGO_SETTINGS_MODULE=backend.settings

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Database Configuration
# =============================================================================

# Local/Docker Development Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=jeticu_dev
DB_USER=postgres
DB_PASSWORD=changeme
DB_HOST=localhost  # Use 'postgres' for Docker
DB_PORT=5432

# Azure Database for PostgreSQL (Production)
AZURE_DB_HOST=your-server.postgres.database.azure.com
AZURE_DB_NAME=jeticu_prod
AZURE_DB_USER=adminuser@your-server
AZURE_DB_PASSWORD=
AZURE_DB_PORT=5432
AZURE_DB_SSL_MODE=require

# Legacy PostgreSQL environment variables (for compatibility)
POSTGRES_DB=airmed
POSTGRES_USER=airmed
POSTGRES_PASSWORD=airmedpass
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_HOST=localhost  # Use 'redis' for Docker
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# HIPAA Encryption Configuration
# =============================================================================

# Base64-encoded 32-byte encryption key (generate with: python -c "import os, base64; print(base64.b64encode(os.urandom(32)).decode())")
ENCRYPTION_KEY=
ENCRYPTION_KEY_ID=default

# Azure Key Vault (Production - for secure key management)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# =============================================================================
# API Integration Keys
# =============================================================================

# DocuSeal API Configuration
DOCUSEAL_API_KEY=iMDk8MquWy9jnnMudnde52Efzfe8HKjx9BdCL4BzePT
DOCUSEAL_BASE_URL=https://api.docuseal.com
DOCUSEAL_WEBHOOK_SECRET=
DOCUSEAL_JET_ICU_SIGNER_EMAIL=contracts@jeticu.com

# Authorize.Net Payment Gateway
AUTHORIZE_NET_LOGIN_ID=
AUTHORIZE_NET_TRANSACTION_KEY=
AUTHORIZE_NET_ENVIRONMENT=sandbox  # or 'production'

# Twilio Configuration (for SMS notifications)
