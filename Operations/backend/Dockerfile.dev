# Development Dockerfile for Django backend with hot-reload
FROM python:3.10-slim

# Set build arguments
ARG PYTHON_VERSION=3.10

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    gcc \
    git \
    netcat-traditional \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --upgrade pip \
    && pip install -r requirements.txt \
    && pip install watchdog[watchmedo] ipython ipdb

# Copy project files (will be overridden by volume mount in development)
COPY . .

# Create necessary directories
RUN mkdir -p /app/static /app/media /app/documents /app/logs

# Expose port
EXPOSE 8001

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DJANGO_SETTINGS_MODULE=backend.settings.docker

# Copy and set permissions for development entrypoint
COPY entrypoint.dev.sh /app/entrypoint.dev.sh
RUN chmod +x /app/entrypoint.dev.sh

# Development entrypoint
ENTRYPOINT ["/app/entrypoint.dev.sh"]

# Default command for development (with auto-reload)
CMD ["python", "manage.py", "runserver", "0.0.0.0:8001"]