# Development Dockerfile for Vue frontend with hot-reload
FROM node:18-alpine

# Set build arguments
ARG NODE_VERSION=18

# Install additional tools for development
RUN apk add --no-cache python3 make g++ git

# Set work directory
WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy application files (will be overridden by volume mount in development)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Set environment variables for development
ENV NODE_ENV=development
ENV CHOKIDAR_USEPOLLING=true

# Health check for development
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:5173', (r) => {if (r.statusCode !== 200) throw new Error()})"

# Run Vite development server with host binding
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]