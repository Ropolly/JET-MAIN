# Production Environment Variables Template
# Copy this to .env.production and fill in actual production values

# =============================================================================
# Django Configuration
# =============================================================================

# Generate a secure secret key for production
SECRET_KEY=

# Always False in production
DEBUG=False

# Production settings module
DJANGO_SETTINGS_MODULE=backend.settings

# Your production domains
ALLOWED_HOSTS=jeticu.com,www.jeticu.com,api.jeticu.com

# =============================================================================
# Azure Database for PostgreSQL
# =============================================================================

# Azure PostgreSQL Configuration
AZURE_DB_HOST=jeticu-prod.postgres.database.azure.com
AZURE_DB_NAME=jeticu_production
AZURE_DB_USER=jetadmin@jeticu-prod
AZURE_DB_PASSWORD=  # Store in Azure Key Vault
AZURE_DB_PORT=5432
AZURE_DB_SSL_MODE=require

# =============================================================================
# Azure Key Vault (for secrets management)
# =============================================================================

AZURE_KEY_VAULT_URL=https://jeticu-keyvault.vault.azure.net/
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# =============================================================================
# Redis (Azure Cache for Redis)
# =============================================================================

REDIS_HOST=jeticu.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=  # Primary access key from Azure
REDIS_SSL=True

# =============================================================================
# HIPAA Encryption
# =============================================================================

# These should be retrieved from Azure Key Vault
ENCRYPTION_KEY=  # Will be fetched from Key Vault
ENCRYPTION_KEY_ID=prod-2024

# =============================================================================
# API Integrations (Production)
# =============================================================================

# DocuSeal Production API
DOCUSEAL_API_KEY=  # Production API key
DOCUSEAL_BASE_URL=https://api.docuseal.com
DOCUSEAL_WEBHOOK_SECRET=  # Production webhook secret
DOCUSEAL_JET_ICU_SIGNER_EMAIL=contracts@jeticu.com

# Authorize.Net Production
AUTHORIZE_NET_LOGIN_ID=  # Production login
AUTHORIZE_NET_TRANSACTION_KEY=  # Production key
AUTHORIZE_NET_ENVIRONMENT=production

# Twilio Production
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Email Configuration (Production)
# =============================================================================

# Using SendGrid or Azure Communication Services
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=  # SendGrid API key
DEFAULT_FROM_EMAIL=noreply@jeticu.com

# =============================================================================
# Frontend Configuration
# =============================================================================

VITE_APP_API_URL=https://api.jeticu.com/api
VITE_APP_NAME=JET ICU Operations
VITE_APP_VERSION=1.0.0

# =============================================================================
# SSL/TLS Configuration
# =============================================================================

# SSL certificates (managed by Azure App Service or your load balancer)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# Static and Media Files (Azure Blob Storage)
# =============================================================================

# Azure Storage Account for static/media files
AZURE_STORAGE_ACCOUNT_NAME=jeticustorage
AZURE_STORAGE_ACCOUNT_KEY=  # Storage account key
AZURE_STORAGE_CONTAINER_STATIC=static
AZURE_STORAGE_CONTAINER_MEDIA=media
AZURE_CDN_DOMAIN=cdn.jeticu.com

STATIC_URL=https://cdn.jeticu.com/static/
MEDIA_URL=https://cdn.jeticu.com/media/

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Application Insights
AZURE_APP_INSIGHTS_KEY=

# Sentry for error tracking
SENTRY_DSN=

# Logging
LOG_LEVEL=WARNING
DJANGO_LOG_LEVEL=WARNING

# =============================================================================
# CORS Configuration (Production)
# =============================================================================

CORS_ALLOWED_ORIGINS=https://jeticu.com,https://www.jeticu.com,https://api.jeticu.com
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# Security Headers
# =============================================================================

SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# =============================================================================
# Performance
# =============================================================================

# Gunicorn Workers
WEB_CONCURRENCY=4
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# =============================================================================
# Deployment Flags
# =============================================================================

LOAD_INITIAL_DATA=false
RUN_SETUP_COMMANDS=false
AUTO_MIGRATE=false  # Handle migrations manually in production